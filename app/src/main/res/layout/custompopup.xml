<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="350dp"
    android:layout_height="475dp"
    android:layout_gravity="center"
    android:background="#00CDDC39"
    android:orientation="vertical"
    android:padding="5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="-72dp"
        tools:layout_editor_absoluteY="8dp">


        <Button
            android:id="@+id/btnProductAdd"
            android:layout_width="202dp"
            android:layout_height="62dp"
            android:layout_marginTop="24dp"
            android:backgroundTint="#692B16"
            android:textColor="#FFFFFF"
            app:layout_constraintEnd_toEndOf="@+id/btnProductSearch"
            app:layout_constraintTop_toBottomOf="@+id/btnProductSearch"
            tools:text="Ürün Ekle" />

        <Button
            android:id="@+id/btnProductSearch"
            android:layout_width="201dp"
            android:layout_height="60dp"
            android:layout_marginStart="56dp"
            android:layout_marginTop="136dp"
            android:backgroundTint="#692B16"
            android:text="Ürün Ara"
            android:textColor="#FFFFFF"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>