<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/kullanici_adi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="136dp"
        android:layout_marginEnd="96dp"
        android:ems="10"
        android:hint="@string/k_adi"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/sifre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="Şifre"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@+id/mail"
        app:layout_constraintTop_toBottomOf="@+id/mail" />

    <EditText
        android:id="@+id/sifre_tekrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Şİfre Tekrar"
        android:inputType="textPassword"
        app:layout_constraintStart_toStartOf="@+id/sifre"
        app:layout_constraintTop_toBottomOf="@+id/sifre" />

    <EditText
        android:id="@+id/magaza_adresi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:hint="Mağaza Adersi"
        android:inputType="textPostalAddress"
        app:layout_constraintStart_toStartOf="@+id/magaza_adi"
        app:layout_constraintTop_toBottomOf="@+id/magaza_adi" />

    <EditText
        android:id="@+id/mail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:hint="@string/mail"
        android:inputType="textEmailAddress"
        app:layout_constraintStart_toStartOf="@+id/kullanici_adi"
        app:layout_constraintTop_toBottomOf="@+id/kullanici_adi" />

    <EditText
        android:id="@+id/magaza_adi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:hint="Mağaza Adı"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/sifre_tekrar"
        app:layout_constraintTop_toBottomOf="@+id/sifre_tekrar" />

    <Button
        android:id="@+id/kaydol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="64dp"
        android:background="#F44336"
        android:text="Kaydol"
        android:textColor="@android:color/background_light"
        app:layout_constraintEnd_toEndOf="@+id/magaza_adresi"
        app:layout_constraintTop_toBottomOf="@+id/magaza_adresi" />

</androidx.constraintlayout.widget.ConstraintLayout>